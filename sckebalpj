-- ðŸ”§ Buat fungsi create yang otomatis bikin GUI glitch
local function create()
	-- Hapus GUI lama kalau ada
	local player = game.Players.LocalPlayer
	local playerGui = player:WaitForChild("PlayerGui")
	local oldGui = playerGui:FindFirstChild("NotFreeNotice")
	if oldGui then oldGui:Destroy() end

	-- ScreenGui
	local screenGui = Instance.new("ScreenGui")
	screenGui.Name = "NotFreeNotice"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = playerGui

	-- Frame putih
	local frame = Instance.new("Frame")
	frame.Size = UDim2.new(0.6, 0, 0.3, 0)
	frame.Position = UDim2.new(0.2, 0, 0.35, 0)
	frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	frame.BorderSizePixel = 0
	frame.Parent = screenGui

	-- Teks utama
	local textLabel = Instance.new("TextLabel")
	textLabel.Size = UDim2.new(1, 0, 1, 0)
	textLabel.BackgroundTransparency = 1
	textLabel.Text = "SEMUA SKRIP TIDAK GRATIS BROðŸ–•ðŸ–• (Alfa)"
	textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
	textLabel.Font = Enum.Font.FredokaOne
	textLabel.TextScaled = true
	textLabel.Parent = frame

	-- Glitch layer merah
	local glitch1 = textLabel:Clone()
	glitch1.TextColor3 = Color3.fromRGB(255, 0, 0)
	glitch1.Parent = frame

	-- Glitch layer biru
	local glitch2 = textLabel:Clone()
	glitch2.TextColor3 = Color3.fromRGB(0, 255, 255)
	glitch2.Parent = frame

	-- Efek glitch acak
	task.spawn(function()
		while true do
			local offset1 = math.random(-3, 3)
			local offset2 = math.random(-3, 3)
			glitch1.Position = UDim2.new(0, offset1, 0, offset2)
			glitch2.Position = UDim2.new(0, -offset1, 0, -offset2)
			glitch1.TextTransparency = math.random() * 0.3
			glitch2.TextTransparency = math.random() * 0.3
			task.wait(0.05)
		end
	end)
end

-- ðŸ§  Jalankan fungsi create
create()
