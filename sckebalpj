--// Fungsi utama create
local create = function()
	local player = game.Players.LocalPlayer
	local gui = Instance.new("ScreenGui")
	gui.Name = "GlitchUI"
	gui.ResetOnSpawn = false
	gui.Parent = player:WaitForChild("PlayerGui")

	-- Frame putih menutupi seluruh layar (tanpa transparansi)
	local frame = Instance.new("Frame")
	frame.Size = UDim2.new(1, 0, 1, 0)
	frame.Position = UDim2.new(0, 0, 0, 0)
	frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	frame.BorderSizePixel = 0
	frame.BackgroundTransparency = 0
	frame.Parent = gui

	-- Label teks di tengah
	local text = Instance.new("TextLabel")
	text.AnchorPoint = Vector2.new(0.5, 0.5)
	text.Position = UDim2.new(0.5, 0, 0.5, 0)
	text.Size = UDim2.new(0.8, 0, 0.2, 0)
	text.BackgroundTransparency = 1
	text.Text = "SEMUA SKRIP TIDAK GRATISðŸ–•ðŸ–• (Alfa)"
	text.Font = Enum.Font.Arcade or Enum.Font.FredokaOne
	text.TextScaled = true
	text.TextColor3 = Color3.fromRGB(255, 255, 255)
	text.TextStrokeTransparency = 0.2
	text.TextStrokeColor3 = Color3.fromRGB(255, 0, 0)
	text.Parent = frame

	-- Suara glitch
	local sound = Instance.new("Sound", gui)
	sound.SoundId = "rbxassetid://9118823105" -- contoh suara glitch
	sound.Volume = 0.6
	sound.Looped = false

	-- Efek glitch (teks saja)
	task.spawn(function()
		while gui.Parent do
			-- Warna teks acak cepat
			text.TextColor3 = Color3.fromRGB(
				math.random(150, 255),
				math.random(150, 255),
				math.random(150, 255)
			)

			-- Getar kecil
			text.Position = UDim2.new(0.5, math.random(-4, 4), 0.5, math.random(-4, 4))
			text.Rotation = math.random(-2, 2)

			-- Transparansi teks acak
			text.TextTransparency = math.random(0, 3) / 10

			-- Kadang bunyi glitch
			if math.random(1, 15) == 1 then
				sound:Play()
			end

			task.wait(0.05)
		end
	end)
end

-- Jalankan fungsi
create()
