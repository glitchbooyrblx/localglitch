-- Hapus GUI lama kalau ada
if game.Players.LocalPlayer and game.Players.LocalPlayer:FindFirstChild("PlayerGui") then
	local oldGui = game.Players.LocalPlayer.PlayerGui:FindFirstChild("NotFreeNotice")
	if oldGui then oldGui:Destroy() end
end

-- Buat GUI baru
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NotFreeNotice"
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame putih di tengah
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.6, 0, 0.3, 0)
frame.Position = UDim2.new(0.2, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Label utama
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 1, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "SEMUA SKRIP TIDAK GRATIS BROðŸ–•ðŸ–• (Alfa)"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.FredokaOne
textLabel.TextScaled = true
textLabel.Parent = frame

-- Glitch layer 1
local glitch1 = textLabel:Clone()
glitch1.TextColor3 = Color3.fromRGB(255, 0, 0)
glitch1.Parent = frame

-- Glitch layer 2
local glitch2 = textLabel:Clone()
glitch2.TextColor3 = Color3.fromRGB(0, 255, 255)
glitch2.Parent = frame

-- Efek glitch
task.spawn(function()
	while true do
		local offset1 = math.random(-3, 3)
		local offset2 = math.random(-3, 3)

		glitch1.Position = UDim2.new(0, offset1, 0, offset2)
		glitch2.Position = UDim2.new(0, -offset1, 0, -offset2)

		glitch1.TextTransparency = math.random() * 0.3
		glitch2.TextTransparency = math.random() * 0.3

		task.wait(0.05)
	end
end)
